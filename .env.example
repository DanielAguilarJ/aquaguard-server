# AquaGuard Backend Configuration

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info
ALLOWED_ORIGINS=http://localhost:3000,https://your-app-domain.com

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-256-bits
DEVICE_SECRET_PREFIX=aquaguard_device_
JWT_EXPIRES_IN=15m

# Appwrite Configuration
APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
APPWRITE_PROJECT_ID=your-project-id
APPWRITE_API_KEY=your-api-key-with-database-write-permissions
APPWRITE_DATABASE_ID=aquaguard_db
APPWRITE_SENSOR_READINGS_COLLECTION_ID=sensor_readings

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
INGEST_RATE_LIMIT_WINDOW_MS=60000
INGEST_RATE_LIMIT_MAX_REQUESTS=300

# Optional: Additional Collections
APPWRITE_DEVICES_COLLECTION_ID=devices
APPWRITE_ALERTS_COLLECTION_ID=alerts